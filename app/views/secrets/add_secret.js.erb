$('.wrap-char-form').fadeOut(200);
$("#secrets-<%=@secret[:num]%>").append(
  "<%= j(render 'open_secrets/open_close',
  num: @secret[:num],
  selected_char: @secret[:selected_char],
  s: @add_secret) %>"
);
$('.js-message-errors').empty();

$('.form-background').on('click', function() {
  $('.wrap-char-form').fadeOut(300);
  return false;
});
$('.edit-charinfo-btn').each(function() {
  $(this).on('click', function() {
    const target = $(this).data('target');
    const modal = document.getElementById(target);
    $(modal).fadeIn(300);
    return false;
  });
});