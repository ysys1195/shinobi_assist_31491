<div class="wrap-char-form" id="form-bg<%= num %>">
  <div class="form-background"></div>
  <div class="char-form">
  <% @char = selected_char %>
    <%= form_with model: @char, url: room_character_path(id: selected_char.id, room_token: token), method: :patch, local: true do |f| %>
      <div class="form-title">
        キャラクター情報変更
      </div>
      <div class="form-contents">
        <div class="hidden-error">
          エラー：キャラクター名を入力してください。
        </div>
        <div class="field">
          <%= f.label "キャラクター名" %><br />
          <%= f.text_field :character_name, value: selected_char.character_name, class: "character_box" %>
        </div>
        <div class="field">
          <%= f.label "秘密" %><br />
          <%= f.text_area :secret, value: selected_char.secret, class: "long_text_box" %>
        </div>
        <div class="field">
          <%= f.label "奥義" %><br />
          <%= f.text_area :last_resort, value: selected_char.last_resort, class: "long_text_box" %>
        </div>
        <div class="hidden-item">
          <%= f.text_field :pc_number, value: num %>
        </div>
        <button class="add-btn">
          <%= f.submit "変更" %>
        </button>
      </div>
    <% end %>
  </div>
</div>