<div class="wrap-char-form" id="add-last-resort<%= num %>">
  <div class="form-background"></div>
  <div class="condition-feeling-form">
    <%= form_with model: @add_last_resort, url: room_last_resorts_path(room_token: token), method: :post, local: true do |f| %>
      <div class="form-title">
        奥義情報追加
      </div>
      <div class="form-contents">
        <% if flash[:error] && flash[:match] == "lr#{num}" %>
          <div class="error-msg">
            <ul>
              <li><%= "奥義を入力してください。" %></li>
            </ul>
          </div>
        <% end %>
      <div class="form-contents">
        <div class="field">
          <%= f.label "奥義" %><br />
          <%= f.text_area :last_resort, placeholder: "奥義を入力", class: "long_text_box" %>
        </div>
        <div class="hidden-item">
          <%= f.text_field :character_id, value: selected_char.id %>
          <%= f.text_field :pc_number, value: selected_char.pc_number %>
          <%= f.text_field :last_resort_n, value: lr_n %>
        </div>
        <button class="add-btn">
          <%= f.submit "追加" %>
        </button>
      </div>
    <% end %>
  </div>
</div>