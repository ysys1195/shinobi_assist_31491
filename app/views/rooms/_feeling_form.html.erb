<div class="wrap-char-form" id="add-feeling<%= num %>">
  <div class="form-background"></div>
  <div class="condition-feeling-form">
    <%= form_with model: @feeling, url: room_feelings_path(room_token: token), method: :post, local: true do |f| %>
      <div class="form-title">
          感情情報入力
        </div>
      <div class="form-contents">
        <% if flash[:error] && flash[:match] == "feeling#{num}" %>
          <div class="error-msg">
            <ul>
              <% flash[:error].each do |message| %>
                <% case message %>
                <% when "Feeling to can't be blank" %>
                  <li>PCを選択してください。</li>
                <% when "Feel must be other than 1" %>
                  <li>感情を選択してください。</li>
                <% end %>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="field">
          <%= f.label "感情" %><span class="required-items"> 必須</span><br />
          <%= f.collection_select(:feel_id, Feel.all, :id, :name, {}, {class: "select_box"}) %>
        </div>
        <div class="arrow-shape">↓</div>
        <div class="field">
          <%= f.label "誰に（感情を向けるPCを選択）" %><span class="required-items"> 必須</span><br />
          <% char_names = [] %>
          <% @characters.each do |char| %>
                <% if char != selected_char %>
                  <% char_names << char.character_name %>
                <% end %>
              <% end %>
          <%= f.select :feeling_to, char_names, {}, {class: "select_box"}%>
        </div>
        <div class="hidden-item">
          <%= f.text_field :character_id, value: selected_char.id %>
          <%= f.text_field :pc_number, value: num %>
        </div>
        <button class="add-btn">
          <%= f.submit "追加" %>
        </button>
      </div>
      <div class="form-title">
        感情情報削除
      </div>
      <div class="form-contents">
        <% @feelings.each do |fe| %>
          <% if fe.character_id == selected_char.id %>
            <div class="del-list">
              <div class="feeling_contents">
                <div><%= fe.feel.name %></div>
                <div>↓</div>
                <div><%= fe.feeling_to %></div>
              </div>
              <div class="del_btn">
                <%= link_to "× 削除", room_feeling_path(room_token: @room.token, id: fe.id), method: :delete %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>