<div class="wrap-char-form" id="secret-edit<%= num %>">
  <div class="form-background"></div>
  <div class="condition-feeling-form">
    <%= form_with model: @add_secret, url: room_secrets_path(room_token: token), method: :post, local: true do |f| %>
      <div class="form-title">
        秘密情報追加
      </div>
      <div class="form-contents">
        <% if flash[:error] && flash[:num] == num %>
          <div class="error-msg">
            <ul>
              <li><%= "秘密を入力してください。" %></li>
            </ul>
          </div>
        <% end %>
      <div class="form-contents">
        <div class="field">
          <%= f.label "秘密" %><br />
          <%= f.text_area :secret, placeholder: "秘密を入力", class: "long_text_box" %>
        </div>
        <div class="hidden-item">
          <%= f.text_field :character_id, value: selected_char.id %>
          <%= f.text_field :pc_number, value: selected_char.pc_number %>
          <%= f.text_field :secret_n, value: secret_n %>
        </div>
        <button class="add-btn", data-target="condition-error<%= num %>">
          <%= f.submit "追加" %>
        </button>
      </div>
    <% end %>
  </div>
</div>