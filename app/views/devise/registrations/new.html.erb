<%# CSS...assets/stylesheets/user/registration.css %>

<%= render "shared/second_header" %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="outer-form-wrap">
    <div class="form-wrap">
      <div class="form-title">
        ユーザー情報登録
      </div>

      <div class="form-contents">
        <%= render "devise/shared/error_messages", resource: resource %><br />

        <div class="field">
          <label>ユーザー名</label><br />
          <%= f.text_field :name, maxlength: "40", placeholder: "ユーザー名を入力", class: "text_box" %>
        </div>

        <div class="field">
          <label>メールアドレス</label><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレスを入力", class: "text_box" %>
        </div>

        <div class="field">
          <label>パスワード</label>(半角英数混合の6文字以上)<br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワードを入力", class: "text_box" %>
        </div>

        <div class="field">
          <label>パスワード確認</label><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワードをもう一度入力", class: "text_box" %>
        </div>

        <button class="actions">
          <%= f.submit "登録" %>
        </button>
      </div>

    </div>
  </div>
<% end %>
