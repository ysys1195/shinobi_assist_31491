<%# CSS...assets/stylesheets/user/session.css %>

<%= render "shared/second_header" %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="outer-form-wrap">
    <div class="form-wrap">
      <div class="form-title">
        ログイン情報入力
      </div>

      <div class="form-contents">
        <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
        <% end %><br />

        <div class="field">
          <%= f.label "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレスを入力", class: "text_box" %>
        </div>

        <div class="field">
          <%= f.label "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワードを入力", class: "text_box" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン" %>
        </div>

      </div>
    </div>
  </div>
<% end %>

<%#= render "devise/shared/links" %>
