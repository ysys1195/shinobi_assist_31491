<%# セッションルームのヘッダー %>

<header>
  <div class="main-left-2header">
    <%= link_to image_tag("title.png", class: "app-title"), root_path %>
      <div class="room-name">部屋名<br />
        <button data-target="edit-room-name", class="room_name_btn modal_form"><%= @room.room_name %></button>
        <% if @role == 200 %>
          <%= render "rooms/room_name", room: @room %>
        <% end %>
      </div>
  </div>

  <div class="main-right-header">
    <ul class="nav">
      <% if @role == 200 %>
        <div class="create_playlog">
          <li><%= link_to '履歴作成', "/rooms/session_logs/#{params[:token]}/new" %></li>
        </div>
        <li><%= link_to image_tag("delete_room.png", class: "delete_room"), room_path, method: :delete,
        alt: "Delete_room", data: { confirm: "本当に部屋を削除してもよろしいですか？" } %></li>
      <% end %>
    </ul>
  </div>
</header>
